      <!-- <groupId>ant</groupId> -->
      <!-- <artifactId>ant</artifactId> -->
      <!-- </exclusion> -->
      <!-- </exclusions> -->
      <!-- </dependency> -->
    </dependencies>
  </dependencyManagement>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.izpack</groupId>
          <artifactId>izpack-maven-plugin</artifactId>
          <version>5.0.0-beta7</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.nuxeo.build</groupId>
        <artifactId>nuxeo-distribution-tools</artifactId>
        <configuration>
          <buildFile>${basedir}/src/main/assemble/assembly.xml</buildFile>
        </configuration>
        <executions>
          <execution>
            <id>process-resources</id>
            <goals>
              <goal>build</goal>
            </goals>
            <phase>process-resources</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.izpack</groupId>
        <artifactId>izpack-maven-plugin</artifactId>
        <configuration>
          <descriptorEncoding>UTF-8</descriptorEncoding>
        </configuration>
        <executions>
          <execution>
            <id>nuxeo-dm-tomcat-installer</id>
            <phase>package</phase>
            <goals>
              <goal>izpack</goal>
            </goals>
            <configuration>
              <baseDir>${staging.dir}/nuxeo-dm-tomcat</baseDir>
              <installFile>${staging.dir}/nuxeo-dm-tomcat/install.xml</installFile>
              <output>${project.build.directory}/nuxeo-dm-${nuxeo.version}-tomcat-izpack-installer.jar</output>
            </configuration>
          </execution>
          <execution>
            <id>nuxeo-cap-tomcat-installer</id>
            <phase>package</phase>
            <goals>
              <goal>izpack</goal>
            </goals>
            <configuration>
              <baseDir>${staging.dir}/nuxeo-cap-tomcat</baseDir>
              <installFile>${staging.dir}/nuxeo-cap-tomcat/install.xml</installFile>
              <output>${project.build.directory}/nuxeo-cap-${nuxeo.version}-tomcat-izpack-installer.jar</output>
            </configuration>
          </execution>
          <execution>
            <id>coreserver-tomcat-installer</id>
            <phase>package</phase>
            <goals>
              <goal>izpack</goal>
            </goals>
            <configuration>
              <baseDir>${staging.dir}/nuxeo-coreserver-tomcat</baseDir>
              <installFile>${staging.dir}/nuxeo-coreserver-tomcat/install.xml</installFile>
              <output>${project.build.directory}/nuxeo-coreserver-${nuxeo.version}-tomcat-izpack-installer.jar</output>
            </configuration>
          </execution>
          <!-- <execution> -->
          <!-- <id>nuxeo-dm-jboss-installer</id> -->
          <!-- <phase>package</phase> -->
          <!-- <goals> -->
          <!-- <goal>izpack</goal> -->
          <!-- </goals> -->
