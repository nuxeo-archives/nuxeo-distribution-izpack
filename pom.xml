          <!-- <output>${project.build.directory}/nuxeo-dm-${nuxeo.version}-jboss-izpack-installer.jar</output> -->
          <!-- </configuration> -->
          <!-- </execution> -->
          <!-- <execution> -->
          <!-- <id>nuxeo-cap-jboss-installer</id> -->
          <!-- <phase>package</phase> -->
          <!-- <goals> -->
          <!-- <goal>izpack</goal> -->
          <!-- </goals> -->
          <!-- <configuration> -->
          <!-- <baseDir>${staging.dir}/nuxeo-cap-jboss</baseDir> -->
          <!-- <installFile>${staging.dir}/nuxeo-cap-jboss/install.xml</installFile> -->
          <!-- <output>${project.build.directory}/nuxeo-dm-${nuxeo.version}-jboss-izpack-installer.jar</output> -->
          <!-- </configuration> -->
          <!-- </execution> -->
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
